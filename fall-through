using System.Collections;
using System.Collections.Generic;
using Unity.VisualScripting;
using UnityEngine;

public class LearningCurve : MonoBehaviour
{

    int diceRoll = 7;
    // Start is called before the first frame update
    void Start()
    {
       switch(diceRoll)
        {
            case 7:
            case 15:
                Debug.Log("You've almost succeeded to steal his wallet silently, but...");
                break;
            case 20:
                Debug.Log("Toss your coin to the Witcher, boy!");
                break;
            default:
                Debug.Log("Get your ass ready, filthy sneak!");
                break;
        }
